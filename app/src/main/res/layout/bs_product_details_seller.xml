<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:padding="10dp"
        android:background="@color/black"
        >

        <TextView
            android:id="@+id/ds_nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorwhite"
            />
        <ImageButton
            android:id="@+id/ds_back"
            android:layout_width="30dp"
            android:src="@drawable/back"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:background="@null"
            />
        <ImageButton
            android:id="@+id/ds_delete"
            android:layout_width="30dp"
            android:src="@drawable/delet"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:background="@null"
            />
        <ImageButton
            android:id="@+id/ds_edit"
            android:layout_width="30dp"
            android:src="@drawable/edit_pen"
            android:layout_height="30dp"
            android:layout_toStartOf="@id/ds_delete"
            android:background="@null"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/ds_productIconTv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:adjustViewBounds="true"
        android:padding="5dp"
        android:src="@drawable/product_image"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ds_productIconTv"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/ds_discountNoteTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_rect_02"
            android:padding="5dp"
            android:paddingEnd="5dp"
            android:text="10% off"
            android:textColor="#4CAF50"
            android:textSize="10sp"

            />
        <TextView
            android:id="@+id/ds_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="The Product Title"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/ds_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="The Product Description"
            android:textColor="#373636"

            />
        <TextView
            android:id="@+id/ds_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="category"
            android:textColor="#373636"

            />
        <TextView
            android:id="@+id/ds_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Quantity"
            android:textColor="#373636"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:id="@+id/ds_discountPriceTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs100"
                android:layout_marginEnd="10dp"
                android:textColor="#3F51B5"
                />
            <TextView
                android:id="@+id/ds_orginalprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs1000"
                android:layout_toEndOf="@id/ds_discountPriceTv"
                android:textColor="#3F51B5"
                />

        </RelativeLayout>

    </LinearLayout>

    </RelativeLayout>