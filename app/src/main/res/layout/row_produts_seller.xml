<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="1dp"
    app:cardElevation="3dp"
    app:contentPadding="5dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/sproductIconiv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/product_image"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_toEndOf="@id/sproductIconiv"
            >

            <TextView
                android:id="@+id/sdiscountnotetv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_rect_02"
                android:padding="5dp"
                android:text="10% off"
                android:textColor="#4CAF50"
                />
            <TextView
                android:id="@+id/stitletv"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Title"
                android:textColor="#000000"
                />
            <TextView
                android:id="@+id/squantitytv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="1"
                android:textColor="#000000"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/sdiscountpricetv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RS100"
                    android:textColor="#838080"
                    android:layout_marginEnd="10dp"
                    />
                <TextView
                    android:id="@+id/sorginalpricetv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RS200"
                    android:textColor="#838080"
                    android:layout_toEndOf="@id/sdiscountpricetv"
                    />
            </RelativeLayout>

        </LinearLayout>
        <ImageView
            android:id="@+id/snexttv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_alignParentEnd="true"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_centerVertical="true"
            android:src="@drawable/next"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>