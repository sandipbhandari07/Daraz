<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddProduct">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/add_backbtn_register_seller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/black"
            android:padding="10dp"
            android:paddingLeft="20dp"
            android:src="@drawable/back" />

        <com.blogspot.atifsoftwares.circularimageview.CircularImageView
            android:id="@+id/add_producticonIV"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/cart_primary"
            app:c_border="true"
            app:c_border_color="@color/colorPrimary"
            app:c_border_width="1dp" />
        <EditText
            android:id="@+id/add_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/back_nav_hover"
            android:padding="10dp"
            android:hint="Title"
            android:layout_below="@id/add_producticonIV"
            android:inputType="textPersonName|textCapWords"
            />

        <EditText
            android:id="@+id/add_tdesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_title"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/back_nav_hover"
            android:hint="Desc"
            android:inputType="textPersonName|textCapWords"
            android:padding="10dp" />

        <EditText
            android:id="@+id/add_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_tdesc"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/back_nav_hover"
            android:hint="Category"
            android:drawableEnd="@drawable/down"
            android:inputType="textCapWords"
            android:padding="10dp" />
        <EditText
            android:id="@+id/add_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/back_nav_hover"
            android:padding="10dp"
            android:hint="Quantity"
            android:layout_below="@id/add_category"
            android:inputType="number"
            />
        <EditText
            android:id="@+id/add_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/back_nav_hover"
            android:padding="10dp"
            android:hint="Price"
            android:layout_below="@id/add_quantity"
            android:inputType="number"
            />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_discountpriceEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_price"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="Discount" />
        <EditText
            android:id="@+id/add_discountprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/back_nav_hover"
            android:padding="10dp"
            android:hint="Discount Price"
            android:layout_below="@id/switch_discountpriceEt"
            android:inputType="numberDecimal"
            />

        <EditText
            android:id="@+id/add_discountnote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_discountprice"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/back_nav_hover"
            android:hint="Discount Note"
            android:inputType="textPersonName|textCapWords"
            android:padding="10dp" />

        <Button
            android:id="@+id/addproductbtn"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_discountnote"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:minWidth="150dp"
            android:text="Add Product" />

    </RelativeLayout>
</ScrollView>